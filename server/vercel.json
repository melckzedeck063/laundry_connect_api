{
  "version": 2,
  "builds": [
    { "src": "server/**", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/uploads/(.*)",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" },
      "continue": true
    },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/server/index.js" }
  ]
}